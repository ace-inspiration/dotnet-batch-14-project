    <style>
        /* Custom styles for the modal */
        .profile-modal .modal-dialog {
            position: fixed;
            margin: 0;
            width: 300px;
            height: 400px;
        }

        .profile-modal .modal-content {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            background-color: #f8f9fa; /* White-gray background */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile-modal .modal-header {
            border-bottom: 1px solid #dee2e6;
            padding: 10px 15px;
        }

        .profile-modal .modal-title {
            font-size: 16px;
            font-weight: 500;
        }

        .profile-modal .modal-body {
            padding: 15px;
            overflow-y: auto;
        }

        .profile-modal .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 10px 15px;
        }

        .profile-modal .btn-close {
            font-size: 12px;
        }

        .profile-modal .form-control-static {
            font-size: 14px;
            color: #495057;
        }

        .profile-modal .form-label {
            font-size: 14px;
            font-weight: 500;
            color: #6c757d;
        }
        .dropdown-toggle::after{
            display: none;
        }

        .dropdown-menu.show {
            display: flex;
            flex-direction: column;
        }

        /* Change navbar item color on scroll */
        .navbar-scrolled {
            background-color: white !important;
        }

            .navbar-scrolled a {
                color: black !important;
            }

            .navbar-scrolled .dropdown-toggle svg  {
                fill: black !important;
            }

            .navbar-scrolled #profileIconContainer span {
                color: black !important;
            }


        /* Ensure profile name and icon alignment */
        #profileIconContainer {
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
        }

            #profileIconContainer span {
                font-weight: bold;
                
            }

        /* Make dropdown text black */
        .dropdown-menu a {
            color: black !important;
        }
    </style>

