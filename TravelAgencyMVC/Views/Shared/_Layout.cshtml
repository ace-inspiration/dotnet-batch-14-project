<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelAgencyMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelAgencyMVC.styles.css" asp-append-version="true" />

    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/vendors.css" rel="stylesheet">
    <style>
        /* Custom styles for the modal */
        .profile-modal .modal-dialog {
            position: fixed;
            margin: 0;
            width: 300px;
            height: 400px;
        }

        .profile-modal .modal-content {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            background-color: #f8f9fa; /* White-gray background */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile-modal .modal-header {
            border-bottom: 1px solid #dee2e6;
            padding: 10px 15px;
        }

        .profile-modal .modal-title {
            font-size: 16px;
            font-weight: 500;
        }

        .profile-modal .modal-body {
            padding: 15px;
            overflow-y: auto;
        }

        .profile-modal .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 10px 15px;
        }

        .profile-modal .btn-close {
            font-size: 12px;
        }

        .profile-modal .form-control-static {
            font-size: 14px;
            color: #495057;
        }

        .profile-modal .form-label {
            font-size: 14px;
            font-weight: 500;
            color: #6c757d;
        }
    </style>

    <!-- SPECIFIC CSS -->
    <link href="~/css/vegas.min.css" rel="stylesheet">

    <!-- Favicons-->
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="~/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="~/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="~/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="~/img/apple-touch-icon-144x144-precomposed.png">
    @await RenderSectionAsync("css", required: false)
</head>
<body>
    <div id="preloader">
        <div class="sk-spinner sk-spinner-wave">
            <div class="sk-rect1"></div>
            <div class="sk-rect2"></div>
            <div class="sk-rect3"></div>
            <div class="sk-rect4"></div>
            <div class="sk-rect5"></div>
