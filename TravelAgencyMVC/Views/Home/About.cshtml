@{
    ViewBag.Title = "About Us";
}


<section class="parallax-window" data-parallax="scroll" data-image-src="../img/slides/beach.jpg" data-natural-width="1400" data-natural-height="470">
    <div class="parallax-content-1 opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
        <div class="animated fadeInDown">
            <h1>Paris tours</h1>
            <p>Cursus neque cursus curae ante scelerisque vehicula</p>
        </div>
    </div>
</section>

<main>
    <div id="carousel-about">
        <div class="owl-carousel owl-theme">
            <div class="owl-slide cover" style="background-image: url(img/slides/about-bg.jpg);">
                <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-10 static">
                                <div class="slide-text text-center white">
                                    <h2 class="owl-slide-animated owl-slide-title">Discover More About Us</h2>
                                    <p class="owl-slide-animated owl-slide-subtitle">
                                        Learn about our mission, values, and dedication to creating unforgettable travel experiences.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="icon_drag_mobile"></div>
    </div>
    <!--/carousel-->
    <div class="container margin_60">
        <div class="main_title">
            <h2>Who <span>We Are</span></h2>
            <p>We are a passionate team of travel experts dedicated to curating the best travel experiences for our customers.</p>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <img src="img/about-us.jpg" class="img-fluid" alt="About Us">
            </div>
            <div class="col-lg-6">
                <h3>Our Mission</h3>
                <p>
                    Our goal is to provide immersive and unique travel experiences that allow you to explore the beauty of the world.
                    Whether you're looking for historical sites, adventure trips, or relaxing getaways, we have something for everyone.
                </p>
                <h3>Why Choose Us?</h3>
                <ul>
                    <li><i class="icon-check"></i> Handpicked travel packages</li>
                    <li><i class="icon-check"></i> Experienced guides and local expertise</li>
                    <li><i class="icon-check"></i> Affordable prices with premium quality</li>
                    <li><i class="icon-check"></i> 24/7 customer support</li>
                </ul>
            </div>
        </div>
    </div>
</main>
