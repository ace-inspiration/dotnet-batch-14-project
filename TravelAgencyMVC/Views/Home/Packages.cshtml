@model List<TravelPackage>

@{
	int itemsPerPage = 5;
	int totalPages = (int)Math.Ceiling((double)Model.Count / itemsPerPage);
	int currentPage = ViewBag.CurrentPage ?? 1;
	var packagesToShow = Model.Skip((currentPage - 1) * itemsPerPage).Take(itemsPerPage).ToList();
}

<section class="parallax-window" data-parallax="scroll" data-image-src="../img/slides/beach.jpg" data-natural-width="1400" data-natural-height="470">
	<div class="parallax-content-1 opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
		<div class="animated fadeInDown">
			<h1>Paris tours</h1>
			<p>Cursus neque cursus curae ante scelerisque vehicula</p>
		</div>
	</div>
</section>

<main>
	<div class="container margin_60">
		<div class="row">
			<div class="col text-center">
				@if (Model.Count != 0)
				{
					@foreach (var package in packagesToShow)
					{
						<div class="strip_all_tour_list wow fadeIn" data-wow-delay="0.1s">
							<div class="row">
								<div class="col-lg-4 col-md-4 position-relative">
									<div class="ribbon_3 popular">
										<span>@package.Status</span>
									</div>

									<div class="img_list">
										<a href="single_tour.html">
											<img src="@package.Image" alt="@package.Title">
											<div class="short_info"><i class="icon_set_1_icon-4"></i>@package.Destination</div>
										</a>
									</div>
								</div>
								<div class="col-lg-6 col-md-6">
									<div class="tour_list_desc">
										<h3><strong>@package.Title</strong> tour</h3>
										<p>@package.Description</p>
										<ul class="add_info">
											<li>
												<div class="tooltip_styled tooltip-effect-4">
													<span class="tooltip-item"><i class="icon_set_1_icon-97"></i></span>
													<div class="tooltip-content">
														<h4>Inclusions</h4> @package.Inclusions
													</div>
												</div>
											</li>
										</ul>
									</div>
								</div>
								<div class="col-lg-2 col-md-2">
									<div class="price_list">
										<div>
											<span class="fs-3">@package.Price MMK</span><small>*Per person</small>
											<p>
												<a href="/Home/PackageDetail/@package.Id" class="btn_1">Details</a>
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					}

					<!-- Pagination -->
					<nav aria-label="Page navigation">
						<ul class="pagination justify-content-center">
							<li class="page-item @(currentPage == 1 ? "disabled" : "")">
								<a class="page-link" href="/Home/PackageList?page=@(currentPage - 1)" aria-label="Previous">
									<span aria-hidden="true">&laquo;</span>
								</a>
							</li>

							@for (int i = 1; i <= totalPages; i++)
							{
								<li class="page-item @(i == currentPage ? "active" : "")">
									<a class="page-link" href="/Home/PackageList?page=@i">@i</a>
								</li>
							}

							<li class="page-item @(currentPage == totalPages ? "disabled" : "")">
								<a class="page-link" href="/Home/PackageList?page=@(currentPage + 1)" aria-label="Next">
									<span aria-hidden="true">&raquo;</span>
								</a>
							</li>
						</ul>
					</nav>
				}
				else
				{
					<div>
						<h2 class="text-center text-danger">No Data Found!</h2>
					</div>
				}
			</div>
		</div>
	</div>
</main>
