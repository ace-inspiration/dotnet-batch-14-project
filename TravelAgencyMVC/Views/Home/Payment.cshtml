

@model bookdata

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }



    .container1 {
        display: flex;
        
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
       
    }

    .left-section {
        flex: 1;
        padding-right: 20px;
    }

        .left-section img {
            width: 100%;
            border-radius: 8px;
        }

    .summary {
        flex: 1;
        padding: 20px;
        border-radius: 8px;
    }

        .summary h2 {
            background-color: #666;
            color: white;
            padding: 10px;
            text-align: center;
            border-radius: 5px;
        }

    table {
        width: 100%;
        margin-top: 15px;
        border-collapse: collapse;
        background: white;
    }

    table,
    th,
    td {
        border-top: 1px solid #ccc;
        border-bottom: 1px solid #ccc;
    }

    td,
    th {
        padding: 10px;
        text-align: left;
        border-right: 1px solid black;
        padding-left: 60px;
        max-width: 150px;
    }

        th:last-child, td:last-child {
            border-right: none;
        }

    .payment-icons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
    }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
    }

    button {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .book-btn {
        background-color: #4a7caf;
        color: white;
    }

    .cancel-btn {
        background-color: #ddd;
    }

    .payment-icons img {
        width: 50px;
        height: 50px;
       
        margin: 0 5px;
    }
</style>


<section id="hero_2" class="background-image" data-background="url(../img/slides/beach1.jpg)">
    <div class="opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)">
        
        <!-- End intro-title -->
    </div>
    <!-- End opacity-mask-->
</section>

<main>

<div class="container1">
    <div class="left-section" style="margin-left: 50px;">
            <h2>@Model.TravelPackage.Title</h2>
        <p>@Model.TravelPackage.Description</p>
        <hr>
            <img src="@Model.TravelPackage.Image" alt="Travel Image" style="width: 500px;height: 300px;margin-left: 3px;">
    </div>
    <div class="summary">
        <h2>Summary</h2>
        <table>
            <tr>
                <td><strong>Username</strong></td>
                <td>@Model.User.Name</td>
            </tr>
            <tr>
                <td><strong>Number of Travelers</strong></td>
                <td>@Model.NumberOfTravelers</td>
            </tr>
            <tr>
                <td><strong>Total Price</strong></td>
                <td>@Model.TotalPrice</td>
            </tr>
            <tr>
                <td><strong>Booking Date</strong></td>
                    <td>@Model.BookingDate.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td><strong>Travel Start Date</strong></td>
                    <td>@Model.TravelStartdate?.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td><strong>Travel End Date</strong></td>
                    <td>@Model.TravelEnddate?.ToString("dd/MM/yyyy")</td>
            </tr>
        </table>
            <form asp-controller="Payment" asp-action="Save" method="post">
                <input type="hidden" name="BookingId" value="@Model.Id" />
                <input type="hidden" id="paymentType" name="paymentType" value="" />

                <div class="payment-icons">
                    <a href="#" onclick="selectPaymentType('Kpay')">
                        <img src="~/img/slides/kpay.jpg" alt="KBZ Pay" style="height: 55px; width:55px;">
                    </a>
                    <a href="#" onclick="selectPaymentType('Wave')">
                        <img src="~/img/slides/wave.png" alt="Wave Pay" style="height: 43px; width:45px; margin-top:5px; border-radius: 4px;">
                    </a>
                    <a href="#" onclick="selectPaymentType('PayPay')">
                        <img src="~/img/slides/paypay.jpg" alt="PayPal" style="height: 55px; width:55px;">
                    </a>
                </div>

                <div class="buttons" style="margin-top: 15px;">
                    <button type="submit" class="btn btn-success">Payment</button>
                    <button type="button" class="btn btn-secondary">Cancel</button>
                </div>
            </form>
    </div>
</div>
</main>

@section scripts {

    <script>
        function selectPaymentType(type) {
            document.getElementById('paymentType').value = type;
        }
    </script>
}