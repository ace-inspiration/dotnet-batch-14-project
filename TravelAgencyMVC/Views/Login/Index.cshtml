@{
    ViewBag.Title = "User Login";
    Layout = "_Login_Layout";
}

<div class="login_container d-flex justify-content-center align-items-center">
        <div class="loginDiv">
            <h2 class="login_text" >User Login</h2>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" action="@Url.Action("Index", "Login")">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter your email" required>
                </div>

                <div class="mb-4">
                    <label class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Enter your password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            <div class="mt-2 text-center">
                <span>
                    Don't have an account? <a class="text-primary" href="/Register">Register</a> here!
                </span>
            </div>
            </form>
            <br />
            @* <div class="forget_p_register"> *@
            @*     <a href="#">Forget Password?</a> *@
            @*     <a href="#">Register</a> *@
            @* </div> *@
        </div>
    </div>
</div>
