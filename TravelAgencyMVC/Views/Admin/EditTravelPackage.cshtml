@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "";
}



@model TravelPackage

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div  class="table-section">

    <h4 class="mb-4 text-primary d-flex align-items-center">
        <i class="bi bi-box-seam me-2"></i> Update Travel Package
    </h4>
    <form id="insertPackageForm" asp-action="SaveTravelPackage" method="post" enctype="multipart/form-data" class="p-4 border rounded  ">

        <div class="mb-3">
            <label for="title" class="form-label fw-bold ">
                <i class="bi bi-card-text me-2"></i> Title
            </label>
            <input type="text" class="form-control" id="title" name="Title" value="@Model.Title">
        </div>

        <div class="mb-3">
            <label for="destination" class="form-label fw-bold ">
                <i class="bi bi-geo-alt me-2"></i> Destination
            </label>
            <input type="text" class="form-control" id="destination" name="Destination" value="@Model.Destination">
        </div>

        <div class="mb-3">
            <label for="price" class="form-label fw-bold ">
                <i class="bi bi-currency-dollar me-2"></i> Price
            </label>
            <input type="number" step="0.01" class="form-control" id="price" name="Price" value="@Model.Price">
        </div>

        <div class="mb-3">
            <label for="inclusions" class="form-label fw-bold ">
                <i class="bi bi-check-circle me-2"></i> Inclusions
            </label>
            <textarea class="form-control" id="inclusions" name="Inclusions" rows="2">@Model.Inclusions</textarea>
        </div>

        <div class="mb-3">
            <label for="cancellationPolicy" class="form-label fw-bold ">
                <i class="bi bi-x-circle me-2"></i> Cancellation Policy
            </label>
            <textarea class="form-control" id="cancellationPolicy" name="CancellationPolicy" rows="2">@Model.CancellationPolicy</textarea>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label fw-bold ">
                <i class="bi bi-file-text me-2"></i> Description
            </label>
            <textarea class="form-control" id="description" name="Description" rows="3">@Model.Description</textarea>
        </div>

        <div class="mb-3">
            <label for="photo" class="form-label fw-bold ">
                <i class="bi bi-image me-2"></i> Package Image
            </label>
            <input type="file" class="form-control" id="photo" name="photo" accept="image/*" value="@Model.Image">
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-save me-1"></i> Update
            </button>
            <button type="button" class="btn btn-secondary" id="cancelButton">
                <i class="bi bi-x-lg me-1"></i> Cancel
            </button>
        </div>
    </form>
</div>

